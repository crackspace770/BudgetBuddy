<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#214236"
        >


        <!-- Header Section -->
<!--        <TextView-->
<!--            android:id="@+id/headerTexts"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp"-->
<!--            android:text="Tambah Kategori Pengeluaran"-->
<!--            android:textSize="20sp"-->
<!--            android:textColor="#D5E8D4"-->
<!--            android:gravity="center"-->
<!--            android:padding="16dp"-->
<!--            android:background="#467566" />-->

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:backgroundTint="@color/hijauu"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/btnback"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:src="@drawable/arrow_left"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori Baru"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/edt_input_name"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="24dp"
            android:gravity="start|center"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_create_24"
            android:drawablePadding="8dp"
            android:hint="Nama Kategori"
            android:textColorHint="@color/hijauu"
            android:textColor="@color/hijauu"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keuangan"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKeuangan"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            />

        <!-- RecyclerView for Category List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMakanan"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minuman"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMinuman"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakaian"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPakaian"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rumah"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRumah"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kendaraan"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKendaraan"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lainya"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLainya"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:backgroundTint="#6F8F6A"
            android:textColor="#D5E8D4"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>
