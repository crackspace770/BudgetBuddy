<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/upperLayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/hijaucantik">


                    <LinearLayout
                        android:id="@+id/accountInfo"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/img_profile"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircleImage"
                            tools:src="@tools:sample/avatars" />



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/poppinsbold"
                                android:gravity="start"
                                android:text="Account Name"
                                android:textColor="#16423C"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvName"
                                android:layout_marginTop="-5dp"
                                android:layout_marginBottom="13dp"
                                android:fontFamily="@font/poppinsmedium"
                                android:gravity="start"
                                android:text="Account@email.com"
                                android:textColor="#16423C"
                                android:textSize="13sp" />

                            <ImageView
                                android:id="@+id/btn_logout"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_logout_24"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="265dp"
                                />

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/middle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:layout_below="@id/upperLayout">


                    <TextView
                        android:id="@+id/AllTimeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="start"
                        android:text="Total Transaksi"
                        android:textColor="#C4DAD2"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/allTimeCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/AllTimeTitle"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/hijaucantik"
                        android:orientation="vertical"
                        app:cardCornerRadius="18dp"

                        app:cardElevation="0dp"
                        app:strokeColor="#C4DAD2"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="15dp"
                            android:background="@color/hijaucantik">

                            <LinearLayout
                                android:id="@+id/linearAmountTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                tools:ignore="NotSibling">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Pengeluaran"
                                    android:textColor="@color/hijauu"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Pemasukan"
                                    android:textColor="@color/hijautuaa"
                                    android:textSize="13sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/linearAmountTitle"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/expenseAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0.00"
                                    android:textColor="@color/hijauu"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/incomeAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0.00"
                                    android:textColor="@color/hijautuaa"
                                    android:textSize="18sp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/linearTransaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/allTimeCard"
                        android:layout_marginTop="24dp"
                        android:paddingHorizontal="24dp">

                        <TextView
                            android:id="@+id/listTransactionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="List Transaksi"
                            android:textColor="#C4DAD2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/viewMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsmedium"
                            android:text="View More"
                            android:textColor="#C4DAD2"
                            android:textSize="14sp"
                            android:paddingEnd="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTransaction"
                        android:layout_width="match_parent"
                        android:layout_below="@id/linearTransaction"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="4dp"
                        android:clipToPadding="false"
                        tools:listitem="@layout/item_transaction" />


                    <TextView
                        android:id="@+id/chartTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rvTransaction"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="start"
                        android:text="Grafik Laporan"
                        android:textColor="#C4DAD2"
                        android:textSize="18dp"
                        android:textStyle="bold" />



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chartCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chartTitle"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="50dp"
                        android:background="@color/hijaucantik"
                        android:orientation="vertical"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:strokeColor="#DDDDDD"
                        app:strokeWidth="1dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp"
                            android:background="@color/hijaucantik">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/buttonDate"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:backgroundTint="@color/hijautua"
                                android:drawableLeft="@drawable/baseline_calender_month_2"
                                android:fontFamily="@font/poppinsmedium"
                                android:insetTop="1dp"
                                android:insetBottom="0dp"
                                android:paddingRight="40dp"
                                android:text="Pilih Tanggal"
                                android:textColor="@color/hijaucantik"
                                android:textSize="14sp"
                                app:cornerRadius="20dp"
                                app:elevation="0dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:id="@+id/saldoLaporan"
                                android:layout_below="@id/buttonDate">

                                <TextView
                                    android:id="@+id/netAmountRangeTitle"
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"

                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="Saldo"
                                    android:gravity="center"
                                    android:textColor="#16423C"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/netAmountRange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/netAmountRangeTitle"
                                    android:fontFamily="@font/poppinsmedium"
                                    android:text="0.00"
                                    android:textColor="#16423C"
                                    android:textSize="22sp"
                                    android:gravity="start"
                                    android:layout_marginLeft="20dp"/>
                            </LinearLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chartMenu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/saldoLaporan"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="25dp"
                                android:backgroundTint="#16423C"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <RadioGroup
                                        android:id="@+id/RadioGroup"
                                        android:layout_width="match_parent"
                                        android:layout_height="28dp"
                                        android:layout_margin="2dp"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/rbBarChart"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/chart_selector"
                                            android:button="@drawable/null_radio_button"
                                            android:checked="true"
                                            android:gravity="center"
                                            android:text="Jumlah"
                                            android:textColor="@drawable/chart_text_selector" />

                                        <RadioButton
                                            android:id="@+id/rbPieChart"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="@drawable/chart_selector"
                                            android:button="@drawable/null_radio_button"
                                            android:gravity="center"
                                            android:text="Rasio"
                                            android:textColor="@drawable/chart_text_selector" />

                                    </RadioGroup>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/barChart"
                                android:layout_width="match_parent"
                                android:layout_height="260dp"
                                android:layout_below="@id/chartMenu"
                                android:layout_marginBottom="20dp"
                                android:visibility="visible" />


                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/pieChart"
                                android:layout_width="match_parent"
                                android:layout_height="260dp"
                                android:layout_below="@+id/chartMenu"
                                android:layout_marginBottom="20dp"
                                android:visibility="gone" />

                        </RelativeLayout>



                    </com.google.android.material.card.MaterialCardView>

